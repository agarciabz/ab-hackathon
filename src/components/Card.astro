---
import { Button } from "./ui/button";

interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="border p-4 flex">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
  <Button client:only="react" text={"test"} />
</li>
<style></style>
